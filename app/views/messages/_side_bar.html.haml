.chat-side
  .side-header
    .side-header__box
      .side-header__box__username
        = current_user.name
      .side-header__box__menu
        = link_to new_group_path(current_user), class: "side-header__box__menu__edit-user" do
          = icon('fas', 'edit')        
        = link_to edit_user_path(current_user), class: "side-header__box__menu__new-group" do
          = icon('fas', 'cog')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          %p.group__group-name
            = group.name
          %p.group__latest-message
            = group.show_last_message